<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:contentDescription="TU Dresden Logo"
        android:src="@drawable/tu_logo" android:cropToPadding="false" android:scaleType="fitStart"
        android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginBottom="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/imageView2"
        android:src="@drawable/dresden_concept_logo"
        android:scaleType="fitEnd" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="5dp">

            <Button
                android:text="StartRec"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btnrec"
                android:layout_weight="1"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="5dp">

            <Button
                android:text="SpopRec"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btnrecstop"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="5dp"/>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="5dp">

            <Button
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btnsave"
                android:layout_weight="1"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Filename"
                android:ems="10"
                android:id="@+id/mFilename"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:visibility="visible" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="5dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spmemos"
                android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginTop="20dp"
                />

        </TableRow>

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_marginBottom="5dp">

            <Button
                android:text="Play"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btnplay"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="5dp">

            <Button
                android:text="StopPlay"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btnstopplay"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>
</RelativeLayout>
